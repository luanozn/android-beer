<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeerDetails">

    <Button
        android:id="@+id/backButton2"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="668dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text=" "
        app:icon="@android:drawable/ic_media_previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/beer_img"
        android:layout_width="139dp"
        android:layout_height="248dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beer_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="160dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="77dp"
        android:layout_height="25dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="35dp"
        android:text="Fabricante:"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/beer_maker"
        app:layout_constraintStart_toEndOf="@+id/beer_img"
        app:layout_constraintTop_toBottomOf="@+id/beer_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="76dp"
        android:layout_height="22dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="2dp"
        android:text="Origem:"
        app:layout_constraintEnd_toStartOf="@+id/beer_maker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/beer_img"
        app:layout_constraintTop_toBottomOf="@+id/beer_name" />

    <TextView
        android:id="@+id/beer_maker"
        android:layout_width="147dp"
        android:layout_height="21dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/beer_name" />

    <TextView
        android:id="@+id/origin"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/beer_maker" />

    <TextView
        android:id="@+id/creationYear"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/creation"
        app:layout_constraintTop_toBottomOf="@+id/origin" />

    <TextView
        android:id="@+id/price"
        android:layout_width="145dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="169dp"
        app:layout_constraintBottom_toTopOf="@+id/beerType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/creationYear" />

    <TextView
        android:id="@+id/beerType"
        android:layout_width="217dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="136dp"
        android:lineSpacingExtra="14sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/creation"
        android:layout_width="75dp"
        android:layout_height="23dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="33dp"
        android:text="Criação:"
        app:layout_constraintStart_toEndOf="@+id/beer_img"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="72dp"
        android:layout_height="23dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="171dp"
        android:text="Preço:"
        app:layout_constraintBottom_toTopOf="@+id/beerType"
        app:layout_constraintStart_toEndOf="@+id/beer_img"
        app:layout_constraintTop_toBottomOf="@+id/creation" />
</androidx.constraintlayout.widget.ConstraintLayout>